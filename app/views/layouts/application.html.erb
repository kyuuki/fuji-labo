<% content_for :header do %>
  <% yield :menu_setting %>
  <%= render "layouts/header" %>
<% end %>
  
<% content_for :hero do %>
  <% if defined?(@is_home) && @is_home %>
    <%= render "layouts/hero" %>
  <% end %>
<% end %>

<% content_for :footer do %>
  <%= render "layouts/footer" %>
<% end %>

<%= render template: "layouts/application_base" %>
